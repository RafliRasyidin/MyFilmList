<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFilmList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyFilmList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background"  tools:ignore="NewApi">@color/white</item>
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextHeadline1" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeadline1.colorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeadline2" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>